<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Login">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login"
            android:id="@+id/lblLogin"
            android:textColor="#ffffffff"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="DNI"
            android:ems="10"
            android:id="@+id/txtUser"
            android:layout_below="@+id/lblLogin"
            android:layout_alignLeft="@+id/txtPass"
            android:layout_alignStart="@+id/txtPass"
            android:layout_marginTop="50dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password"
            android:id="@+id/lblPass"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/txtPass"
            android:layout_alignStart="@+id/txtPass"
            android:layout_alignRight="@+id/txtPass"
            android:layout_alignEnd="@+id/txtPass"
            android:layout_below="@+id/txtUser"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:textSize="22dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPass"
            android:layout_below="@+id/lblPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#ffffffff" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantenerme Conectado"
            android:id="@+id/checkBox"
            android:layout_below="@+id/txtPass"
            android:layout_alignLeft="@+id/txtPass"
            android:layout_alignStart="@+id/txtPass"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:id="@+id/btnIngresar"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true"
            android:onClick="inicio" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Nuevo Usuario"
            android:id="@+id/btnNewUser"
            android:layout_below="@+id/btnIngresar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:onClick="registro" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:id="@+id/btnSalir"
            android:layout_below="@+id/btnNewUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:onClick="salir" />


    </RelativeLayout>
</ScrollView>